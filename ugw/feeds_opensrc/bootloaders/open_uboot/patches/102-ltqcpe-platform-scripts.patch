+    PACK_DATA_LEN=`echo $1 |wc -c`
+    let PACK_DATA_LEN=$PACK_DATA_LEN-1
+    PACK_START=1
+    PACK_RESULT=
+    while [ $PACK_START -le $PACK_DATA_LEN ]
+    do
+      PACK_TMP=`echo $1 | awk '{print substr($0, '$PACK_START', 2)}'`
+      PACK_RESULT="${PACK_RESULT}\x${PACK_TMP}"
+      let PACK_START=$PACK_START+2
+    done
+    echo $PACK_RESULT
+}
+
+
