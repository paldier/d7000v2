+
+sub go_die
+{
+    my($message, $supressformat) = @_;
+
+    if ($message)
+    {
+        print "$message";
+    }
+
+    close (INFILE);
+    close (OUTFILE);
+
+    unless ($supressformat)
+    {
+        print "format is: \n";
+        print " perl mk_mlc_image.pl original.bin mlc.bin\n";
+    }
+    else
+    {
+       print "----------------------------------------------------------\n";
+    }
+
+    die ("\n");
+}
