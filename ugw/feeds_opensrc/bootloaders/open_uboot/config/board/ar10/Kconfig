   bool "Use internal 25Mhz clock for external phy" 
   default y


config UBOOT_CONFIG_AR10_GPHY_FW_EMBEDDED
    bool "gphy firmware embedded"
	default y
		

config UBOOT_CONFIG_AR10_GPHY_FW_ADDR
    hex  
	default "0xb0010000" if ( UBOOT_CONFIG_BOOT_FROM_NOR )
	default "0xa0110000" if ( UBOOT_CONFIG_BOOT_FROM_SPI )
	default "0xa0120000" if ( UBOOT_CONFIG_BOOT_FROM_NAND )
	depends on UBOOT_CONFIG_AR10_SW_PORT_1 || UBOOT_CONFIG_AR10_SW_PORT_2 || UBOOT_CONFIG_AR10_SW_PORT_3 || UBOOT_CONFIG_AR10_SW_PORT_4 || UBOOT_CONFIG_AR10_SW_PORT_5b
    depends on UBOOT_CONFIG_AR10_GPHY_FW_EMBEDDED

config UBOOT_CONFIG_AR10_EXTERN_GPHY_FW_ADDR
    hex "gphy firmware address"
	default "0xb0010000"
	depends on !UBOOT_CONFIG_AR10_GPHY_FW_EMBEDDED
			
