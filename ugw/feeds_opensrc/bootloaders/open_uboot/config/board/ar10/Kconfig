if LANTIQ_UBOOT_grx390
config UBOOT_CONFIG_DRIVER_GRX390
	bool
	default y
endif

config UBOOT_CONFIG_DRIVER_AR10
      bool
	  default y


menu "CPU/DDR FREQUENCY"

choice 
    prompt "DDR TYPE SELECTION"
    default UBOOT_CONFIG_AR10_DDR2

config UBOOT_CONFIG_AR10_DDR1
    bool "DDR1"

config UBOOT_CONFIG_AR10_DDR2
    bool "DDR2"

endchoice

choice
    prompt "CRYSTAL CLOCK FREQUENCY"
    default UBOOT_CONFIG_AR10_CRYSTAL_36M

config UBOOT_CONFIG_AR10_CRYSTAL_25M
    bool "25M"

config UBOOT_CONFIG_AR10_CRYSTAL_36M
    bool "36M"

endchoice

config UBOOT_CONFIG_MIPS_CLK_FUSED_CHIP
	bool "Chip is fused to 600Mhz"
	depends on UBOOT_CONFIG_DRIVER_GRX390
	default n
	help

config UBOOT_CONFIG_GRX390_CPUFREQ_AUTO_DETECT
	bool "Allow Chip to auto detect CPU/DDR Frequency"
	depends on UBOOT_CONFIG_DRIVER_GRX390
	default n


choice
    prompt "CPU AND RAM CONFIGURATION"
    default UBOOT_CONFIG_AR10_SYS_CLOCK_500M
    depends on !UBOOT_CONFIG_GRX390_CPUFREQ_AUTO_DETECT

config UBOOT_CONFIG_AR10_CPU_125M_RAM_125M
    bool "125M/125M"
    select UBOOT_CONFIG_AR10_SYS_CLOCK_500M
    depends on !UBOOT_CONFIG_DRIVER_GRX390

config UBOOT_CONFIG_AR10_CPU_250M_RAM_125M
    bool "250M/125M" 
    select UBOOT_CONFIG_AR10_SYS_CLOCK_500M
    depends on !UBOOT_CONFIG_DRIVER_GRX390

config UBOOT_CONFIG_AR10_CPU_250M_RAM_250M
    bool "250M/250M"
    select UBOOT_CONFIG_AR10_SYS_CLOCK_500M
	depends on !UBOOT_CONFIG_DRIVER_GRX390
   
config UBOOT_CONFIG_AR10_CPU_500M_RAM_250M
    bool "500M/250M"
    select UBOOT_CONFIG_AR10_SYS_CLOCK_500M
	depends on !UBOOT_CONFIG_DRIVER_GRX390

config UBOOT_CONFIG_AR10_CPU_150M_RAM_150M
    bool "150M/150M"
    select UBOOT_CONFIG_AR10_SYS_CLOCK_600M

config UBOOT_CONFIG_AR10_CPU_300M_RAM_150M
    bool "300M/150M"
	select UBOOT_CONFIG_AR10_SYS_CLOCK_600M

config UBOOT_CONFIG_AR10_CPU_300M_RAM_300M
    bool "300M/300M"
	select UBOOT_CONFIG_AR10_SYS_CLOCK_600M
	
config UBOOT_CONFIG_AR10_CPU_600M_RAM_300M
    bool "600M/300M"
	select UBOOT_CONFIG_AR10_SYS_CLOCK_600M

config UBOOT_CONFIG_GRX390_CPU_666M_RAM_333M
    bool "666M/333M"
	depends on !UBOOT_CONFIG_MIPS_CLK_FUSED_CHIP && UBOOT_CONFIG_DRIVER_GRX390
	select UBOOT_CONFIG_GRX390_SYS_CLOCK_666M

config UBOOT_CONFIG_GRX390_CPU_180M_RAM_180M
    bool "180M/180M"
	depends on !UBOOT_CONFIG_MIPS_CLK_FUSED_CHIP && UBOOT_CONFIG_DRIVER_GRX390
	select UBOOT_CONFIG_GRX390_SYS_CLOCK_720M

config UBOOT_CONFIG_GRX390_CPU_360M_RAM_180M
    bool "360M/180M"
	depends on !UBOOT_CONFIG_MIPS_CLK_FUSED_CHIP && UBOOT_CONFIG_DRIVER_GRX390
	select UBOOT_CONFIG_GRX390_SYS_CLOCK_720M

config UBOOT_CONFIG_GRX390_CPU_360M_RAM_360M
    bool "360M/360M"
	depends on !UBOOT_CONFIG_MIPS_CLK_FUSED_CHIP && UBOOT_CONFIG_DRIVER_GRX390
	select UBOOT_CONFIG_GRX390_SYS_CLOCK_720M

config UBOOT_CONFIG_GRX390_CPU_720M_RAM_360M
    bool "720M/360M"
    depends on !UBOOT_CONFIG_MIPS_CLK_FUSED_CHIP && UBOOT_CONFIG_DRIVER_GRX390
    select UBOOT_CONFIG_GRX390_SYS_CLOCK_720M

endchoice

config UBOOT_CONFIG_AR10_SYS_CLOCK_500M
    bool

config UBOOT_CONFIG_AR10_SYS_CLOCK_600M
    bool

config UBOOT_CONFIG_GRX390_SYS_CLOCK_666M
	bool

config UBOOT_CONFIG_GRX390_SYS_CLOCK_720M
    bool


choice
    prompt "PPE FREQUENCY"
    default UBOOT_CONFIG_AR10_PPE_FREQ_250M
    depends on !UBOOT_CONFIG_GRX390_CPUFREQ_AUTO_DETECT

config UBOOT_CONFIG_AR10_PPE_FREQ_250M
    bool "250M"

config UBOOT_CONFIG_AR10_PPE_FREQ_400M
    bool "400M"

config UBOOT_CONFIG_AR10_PPE_FREQ_432M
    bool "432M"
    depends on (GRX390_CPU_666M_RAM_333M || UBOOT_CONFIG_AR10_CPU_600M_RAM_300M) && !UBOOT_CONFIG_GRX390_CPU_720M_RAM_360M

config UBOOT_CONFIG_AR10_PPE_FREQ_468M
	bool "468M"
	depends on UBOOT_CONFIG_DRIVER_GRX390 && UBOOT_CONFIG_GRX390_CPU_666M_RAM_333M

endchoice

config UBOOT_CONFIG_AR10_DDR_8BIT
    bool "8Bit DDR RAM"
	default n

endmenu

	
menu "SWITCH OPTIONS"

config UBOOT_CONFIG_AR10_SW_PORT_0
    bool "USE PORT 0"

choice
   prompt "INTERFACE"
   depends on UBOOT_CONFIG_AR10_SW_PORT_0
   default UBOOT_CONFIG_AR10_SW_PORT0_RGMII_MAC

config UBOOT_CONFIG_AR10_SW_PORT0_MII_PHY
   bool "MII PHY"

config UBOOT_CONFIG_AR10_SW_PORT0_MII_MAC
   bool "MII MAC"

config UBOOT_CONFIG_AR10_SW_PORT0_RMII_PHY
   bool "RMII PHY"

config UBOOT_CONFIG_AR10_SW_PORT0_RMII_MAC
   bool "RMII MAC"

config UBOOT_CONFIG_AR10_SW_PORT0_RGMII_MAC
   bool "RGMII MAC"

endchoice  

config UBOOT_CONFIG_AR10_SW_PORT0_MIIMODE
   int
   depends on UBOOT_CONFIG_AR10_SW_PORT_0
   default 0 if UBOOT_CONFIG_AR10_SW_PORT0_MII_PHY
   default 1 if UBOOT_CONFIG_AR10_SW_PORT0_MII_MAC
   default 2 if UBOOT_CONFIG_AR10_SW_PORT0_RMII_PHY
   default 3 if UBOOT_CONFIG_AR10_SW_PORT0_RMII_MAC
   default 4 if UBOOT_CONFIG_AR10_SW_PORT0_RGMII_MAC

   
choice
   prompt "xMII CLOCK RATE"
   depends on UBOOT_CONFIG_AR10_SW_PORT_0
   default UBOOT_CONFIG_AR10_SW_PORT0_MIIRATE_AUTO
	
config UBOOT_CONFIG_AR10_SW_PORT0_MIIRATE_M2P5
	 bool "2.5MHz"
	 depends on !UBOOT_CONFIG_AR10_SW_PORT0_RMII_MAC && !UBOOT_CONFIG_AR10_SW_PORT0_RMII_PHY
	
config UBOOT_CONFIG_AR10_SW_PORT0_MIIRATE_M25
    bool "25MHz"
    depends on !UBOOT_CONFIG_AR10_SW_PORT0_RMII_MAC && !UBOOT_CONFIG_AR10_SW_PORT0_RMII_PHY

config UBOOT_CONFIG_AR10_SW_PORT0_MIIRATE_M125
    bool "125MHz"
    depends on !UBOOT_CONFIG_AR10_SW_PORT0_RMII_MAC && !UBOOT_CONFIG_AR10_SW_PORT0_RMII_PHY

config UBOOT_CONFIG_AR10_SW_PORT0_MIIRATE_M50	
	  bool "50MHz"
	  
config UBOOT_CONFIG_AR10_SW_PORT0_MIIRATE_AUTO
    bool "AUTO"
    depends on !UBOOT_CONFIG_AR10_SW_PORT0_RMII_MAC && !UBOOT_CONFIG_AR10_SW_PORT0_RMII_PHY
		
endchoice

config UBOOT_CONFIG_AR10_SW_PORT0_MIIRATE
    int 
	depends on UBOOT_CONFIG_AR10_SW_PORT_0
	default 0 if UBOOT_CONFIG_AR10_SW_PORT0_MIIRATE_M2P5
	default 1 if UBOOT_CONFIG_AR10_SW_PORT0_MIIRATE_M25
	default 2 if UBOOT_CONFIG_AR10_SW_PORT0_MIIRATE_M125
	default 3 if UBOOT_CONFIG_AR10_SW_PORT0_MIIRATE_M50
	default 4 if UBOOT_CONFIG_AR10_SW_PORT0_MIIRATE_AUTO

choice 
    prompt "RMII REF CLOCK DIRECTIOM"
	  default UBOOT_CONFIG_AR10_SW_PORT0_RMII_CLK_IN
	  depends on UBOOT_CONFIG_AR10_SW_PORT0_RMII_PHY || UBOOT_CONFIG_AR10_SW_PORT0_RMII_MAC

config UBOOT_CONFIG_AR10_SW_PORT0_RMII_CLK_IN
    bool "IN"

config UBOOT_CONFIG_AR10_SW_PORT0_RMII_CLK_OUT
    bool "OUT"
	
endchoice


