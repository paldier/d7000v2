#!/bin/sh
if [ -z "$lan_main_0_ipAddr" ]; then
	if [ ! "$ENVLOADED" ]; then
		if [ -r /etc/rc.conf ]; then
			 . /etc/rc.conf 2> /dev/null
			ENVLOADED="1"
		fi
	fi

	if [ ! "$CONFIGLOADED" ]; then
		if [ -r /etc/rc.d/config.sh ]; then
			. /etc/rc.d/config.sh 2>/dev/null
			CONFIGLOADED="1"
		fi
	fi
fi

if  [ -n "$CONFIG_FEATURE_WIRELESS" -a "$CONFIG_FEATURE_WIRELESS" = "1" ]; then
	if [ -n "$wlan_enable" -a "$wlan_enable" = "1" ]; then
		LAN=br0
	else
		LAN=$lan_main_0_interface
	fi
else
	LAN=$lan_main_0_interface
fi
#echo $LAN
LAN_IFNAME=$LAN

